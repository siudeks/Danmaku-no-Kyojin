<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

	<action label="top">
		<repeat>
			<times>(7+$rank*50)</times>
			<action>
				<fire>
					<direction type="sequence">360/(6+$rank*50)</direction>
					<speed>5 * $rank</speed>
					<bullet>
					</bullet>
				</fire>
				<wait>50/(6+$rank*10)</wait>
			</action>
		</repeat>
		<vanish/>
	</action>
</bulletml>
